import os
import json

# Create the complete professional project structure
def create_project_structure():
    # Main project directory
    project_name = "mindcare-ai"
    
    # Create all directories
    directories = [
        f"{project_name}",
        f"{project_name}/src",
        f"{project_name}/src/components",
        f"{project_name}/src/utils",
        f"{project_name}/src/services",
        f"{project_name}/public",
        f"{project_name}/public/css",
        f"{project_name}/public/js",
        f"{project_name}/public/assets",
        f"{project_name}/public/assets/images",
        f"{project_name}/config",
        f"{project_name}/docs",
        f"{project_name}/tests",
        f"{project_name}/scripts",
        f"{project_name}/.github",
        f"{project_name}/.github/workflows"
    ]
    
    for directory in directories:
        os.makedirs(directory, exist_ok=True)
    
    print("üìÅ Professional project structure created!")
    print("Directory structure:")
    for directory in directories:
        print(f"   {directory}/")
    
    return project_name

project_name = create_project_structure()
 
